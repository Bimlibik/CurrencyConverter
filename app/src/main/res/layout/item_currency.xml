<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="currency"
            type="com.foxy.currencyconverter.data.model.Currency" />
        <variable
            name="viewModel"
            type="com.foxy.currencyconverter.view_models.CurrenciesViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:onClick="@{() -> viewModel.saveSelectedCurrency(currency)}">

        <ImageView
            android:id="@+id/img_flag"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@color/colorAccent"/>
        <TextView
            android:id="@+id/tv_char_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_gravity="center_vertical"
            android:text="@{currency.charCode}"/>
    </LinearLayout>

</layout>